
<div class="d-flex space-x-2">

    <SwitchContent Animation="SwitchAnimation.Scale">
        <DefaultTemplate>
            <Icon class="icon" Elements="@DemoIcons.Heart" />
        </DefaultTemplate>
        <ActiveTemplate>
            <Icon class="icon" Elements="@DemoIcons.Heart" Filled TextColor="TablerColor.Red" />
        </ActiveTemplate>
    </SwitchContent>


    <SwitchContent Animation="SwitchAnimation.SlideLeft">
        <DefaultTemplate>
            <Icon class="icon" Elements="@DemoIcons.X" />
        </DefaultTemplate>
        <ActiveTemplate>
            <Icon class="icon" Elements="@DemoIcons.Check" TextColor="TablerColor.Green" />
        </ActiveTemplate>
    </SwitchContent>

    <SwitchContent Animation="SwitchAnimation.SlideUp">
        <DefaultTemplate>
            <Icon class="icon text-muted" Elements="@DemoIcons.Arrow_down" />
        </DefaultTemplate>
        <ActiveTemplate>
            <Icon class="icon text-muted" Elements="@DemoIcons.Arrow_up" />
        </ActiveTemplate>
    </SwitchContent>

    <SwitchContent Animation="SwitchAnimation.Flip">
        <DefaultTemplate>
            <Icon  Elements="@DemoIcons.Thumb_up" TextColor="TablerColor.Success" />
        </DefaultTemplate>
        <ActiveTemplate>
            <Icon  Elements="@DemoIcons.Thumb_down" TextColor="TablerColor.Danger"/>
        </ActiveTemplate>
    </SwitchContent>

</div>

